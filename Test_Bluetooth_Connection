
#include "BluetoothSerial.h"


BluetoothSerial SerialBT; //testing bluetooth connection and sending data between computer and esp32

void setup() {
  Serial.begin(115200); // start serial monitor
  SerialBT.begin("James_ESP32"); //start bluetooth on esp32

}

void loop() {
  if (Serial.available()) {
    SerialBT.print(Serial.read());
  }
  if (SerialBT.available()) {
    Serial.print(SerialBT.read());
  }
  delay(20);
}
